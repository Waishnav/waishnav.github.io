---
interface Props {
  date: Date;
  withYear?: boolean;
}

const { date, withYear } = Astro.props;
---

<time datetime={date.toISOString()} class="text-gray-500 whitespace-nowrap">
  {
    date.toLocaleDateString("en-us", {
      month: "short",
      day: "numeric",
      ...(withYear && { year: "numeric" })
    })
  }
</time>
